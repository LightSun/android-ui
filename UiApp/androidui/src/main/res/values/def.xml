<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="lib_ui_round" format="dimension|reference"/>
    <attr name="lib_ui_round_x" format="dimension|reference"/>
    <attr name="lib_ui_round_y" format="dimension|reference"/>

    <attr name="lib_ui_round_border" format="dimension|reference"/>
    <attr name="lib_ui_round_border_x" format="dimension|reference"/>
    <attr name="lib_ui_round_border_y" format="dimension|reference"/>
    <attr name="lib_ui_round_border_color" format="color|reference"/>

    <attr name="lib_ui_round_circle" format="boolean|reference"/>
    <attr name="lib_ui_round_afterPadding" format="boolean|reference"/>
    <attr name="lib_ui_round_style" format="enum">
        <enum name="stroke" value="1"/>
        <enum name="fill" value="2"/>
        <enum name="stroke_and_fill" value="3"/>
    </attr>

    <declare-styleable name="RoundDrawable">
        <!-- The wrapped drawable. -->
        <attr name="drawable" format="reference"/>
        <attr name="circle" format="boolean|reference"/>

        <attr name="round_size" format="dimension|reference"/>
        <attr name="border_color" format="color|reference"/>
        <attr name="border_size" format="dimension|reference"/>
        <attr name="afterPadding" format="boolean|reference"/>
        <!-- the calculator used for RoundHelper. this can used to do with animate drawable. -->
        <attr name="calculator" format="string|reference"/>
    </declare-styleable>

    <declare-styleable name="RoundLinearLayout">
        <attr name="lib_ui_round"/>
        <attr name="lib_ui_round_x"/>
        <attr name="lib_ui_round_y"/>

        <attr name="lib_ui_round_border"/>
        <attr name="lib_ui_round_border_x"/>
        <attr name="lib_ui_round_border_y"/>
        <attr name="lib_ui_round_border_color"/>

        <attr name="lib_ui_round_circle"/>
        <attr name="lib_ui_round_afterPadding"/>
        <attr name="lib_ui_round_style"/>
    </declare-styleable>

    <declare-styleable name="RoundTextView">
        <attr name="lib_ui_round"/>
        <attr name="lib_ui_round_x"/>
